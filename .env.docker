# Docker Environment Configuration for Pleb-R1
# Copy this file to .env and customize for your deployment

# Database Configuration
POSTGRES_PASSWORD=pleb_secure_password_change_me
REDIS_PASSWORD=redis_secure_password_change_me

# Relay Configuration
RELAY_PUBKEY=your_relay_public_key_here
RELAY_CONTACT=admin@pleb-r1.com

# Logging
RUST_LOG=info

# Monitoring
GRAFANA_PASSWORD=secure_grafana_password

# SSL/TLS (for production)
DOMAIN=relay.yourdomain.com
EMAIL=admin@yourdomain.com

# Development Settings
DEV_MODE=false
